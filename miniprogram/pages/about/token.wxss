/* pages/about/token.wxss */
.wrap {
  padding: 30rpx 30rpx 80rpx;
}
.title {
  font-size: 38rpx;
  font-weight: bold;
  margin-bottom: 30rpx;
}
.step {
  padding: 14rpx 0;
  line-height: 1.6;
}
.step image {
  display: block;
  margin: 30rpx 0;
  border-radius: 4rpx;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, .3);
  box-sizing: border-box;
  transition: box-shadow .5s;
}